    <context:component-scan base-package="com.btc.lecoorde.trainee_administration"/>

    <bean id="traineeService" class="com.btc.lecoorde.trainee_administration.service.TraineeService">
    </bean>

    <bean id="locationService" class="com.btc.lecoorde.trainee_administration.service.LocationService">
    </bean>

    <bean id="departmentService" class="com.btc.lecoorde.trainee_administration.service.DepartmentService">
    </bean>

    <bean id="skillService" class="com.btc.lecoorde.trainee_administration.service.SkillService">
    </bean>


</beans>